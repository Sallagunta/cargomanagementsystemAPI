@{
}
<form method="post" enctype="multipart/form-data">
    <h2>Bill</h2><hr />
    <div class="form-group">
        <label> Bill No</label>
        <input type="text" asp-for="Bill_no" class="form-control" />
    </div>
    <div class="form-group">
        <label> Sender ID</label>
        <input type="text" asp-for="Sender_id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Type of Goods</label>
        <input type="text" asp-for="Type_of_goods" class="form-control" />
    </div>
    <div class="form-group">
        <label>Goods Quantity</label>
        <input type="text" asp-for="Goods_Qty" class="form-control" />
    </div>
    <div class="form-group">
        <label>Transaction Amount</label>
        <input type="text" asp-for="Trans_amount" class="form-control" />
    </div>
    <div class="form-group">
        <label>Sending Date</label>
        <input type="text" asp-for="Sending_date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Receiver Date</label>
        <input type="text" asp-for="Receiver_date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Source Address</label>
        <input type="text" asp-for="Source" class="form-control" />
    </div>
    <div class="form-group">
        <label>Destination Address</label>
        <input type="text" asp-for="Destination" class="form-control" />
    </div>




    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
            <a asp-controller="Transaction" asp-action="BillingIndex">Billing</a>
        </div> }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>}
    <hr />
</form>