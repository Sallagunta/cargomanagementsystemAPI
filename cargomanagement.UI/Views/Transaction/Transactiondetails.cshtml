@{
}
<form method="post" enctype="multipart/form-data">
    <h2>Transaction Details</h2><hr />
    <div class="form-group">
        <label> Sender ID</label>
        <input type="text" asp-for="Sender_id" class="form-control" placeholder="enter  Sender ID" required />
    </div>
    <div class="form-group">
        <label>Type of Goods</label>
        <input type="text" asp-for="Type_of_goods" class="form-control" placeholder="enter Type of Goods" required />
    </div>
    <div class="form-group">
        <label>Goods Quantity</label>
        <input type="text" asp-for="Goods_Qty" class="form-control" placeholder="enter goods quantity" required />
    </div>
    <div class="form-group">
        <label>Transaction Amount</label>
        <input type="text" asp-for="Trans_amount" class="form-control" placeholder="enter Transaction Amount" required />
    </div>
    <div class="form-group">
        <label>Sending Date</label>
        <input type="text" asp-for="Sending_date" class="form-control" placeholder="enter Sending date" required />
    </div>
    <div class="form-group">
        <label>Receiver Date</label>
        <input type="text" asp-for="Receiver_date" class="form-control" placeholder="enter Receiving date" required />
    </div>
    <div class="form-group">
        <label>Source Address</label>
        <input type="text" asp-for="Source" class="form-control" placeholder="enter Source date" required />
    </div>
    <div class="form-group">
        <label>Destination Address</label>
        <input type="text" asp-for="Destination" class="form-control" placeholder="enter Destination date" required />
    </div>


    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
<div class="alert alert-success">
    @ViewBag.message
    <a asp-controller="Transaction" asp-action="Index">Transactions</a>
    


</div> }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>}
    
</form>
