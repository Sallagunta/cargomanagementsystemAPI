    <div class="form-group">
        <label> Customer City</label>
        <input type="text" asp-for="custCity" class="form-control" placeholder="enter city name" required />
    </div>
    <div class="form-group">
        <label>Customer PhoneNumber</label>
        <input type="text" asp-for="custPhone" class="form-control" placeholder="enter Cust" required />
