@model IEnumerable<cargomanagementsystem.Entity.Model.Customerdetails>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row">
    <div class="col-12">
        <h3>Customer Details</h3>
        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>custname</th>
                    <th>custId</th>
                    <th>custAddress</th>
                    <th>custCity</th>
                    <th> custPhone</th>
                    <th>custpincode</th>
                    <th>recNmae</th>
                    <th>recID</th>
                    <th>recAddress</th>
                    <th>rectCity</th>
                    <th>recPhone</th>
                    <th>recpincode</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var Customerdetails in Model)
                {

                    <tr>
                        <td>@Customerdetails.custname</td>
                        <td>@Customerdetails.custId</td>
                        <td>@Customerdetails.custAddress</td>
                        <td>@Customerdetails.custCity</td>
                        <td>@Customerdetails.custPhone</td>
                        <td>@Customerdetails.custpincode</td>
                        <td>@Customerdetails.recNmae</td>
                        <td>@Customerdetails.recID</td>
                        <td>@Customerdetails.recAddress</td>
                        <td>@Customerdetails.rectCity</td>
                        <td>@Customerdetails.recPhone</td>
                        <td>@Customerdetails.recpincode</td>

                        <td><a asp-controller="Customerdetails" asp-action="GetCustomerdetails" asp-route-custId="@Customerdetails.custId">Edit</a></td>
                    </tr>
}
            </tbody>
        </table>
    </div>
</div>
